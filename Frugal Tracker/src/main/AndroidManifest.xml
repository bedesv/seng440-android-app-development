<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/frugal_tracker_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/frugal_tracker_icon_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FrugalTracker"
        android:name="com.bedesv.frugaltracker.FrugalTrackerApplication"
        android:windowSoftInputMode="adjustResize">
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/title_activity_add_transaction"
            android:theme="@style/Theme.FrugalTracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>